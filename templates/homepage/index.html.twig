{% extends 'base.html.twig' %}

{% block title %}{{ app_name }}{% endblock %}

{% block body %}
    <h2 class="card-box">{{ app_name }}</h2>

    <div class="row">
        {% for i, video in videos %}
            <div class="col-md-3">
                {{ include('videos/partials/_video-card.html.twig', {'video': video}) }}
            </div>

            {% if (i % 4) is same as(3) %}
                </div><div class="row">
            {% endif %}

        {% endfor %}
    </div>
{% endblock %}
