{% extends 'base.html.twig' %}

{% block title %}{{ user.fullname }}{% endblock %}

{% block body %}
    <h2 class="card-box">{{ user.fullname }}</h2>

    <div class="row">
        <div class="col-md-12">
            <div class="bg-picture card-box">
                <div class="profile-info-name">
                    <img src="{{ asset(avatars_url_segment ~ user.avatar) }}" class="img-thumbnail" alt="profile-image">
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
    {% for i, video in user.videos %}
        <div class="col-md-3">
            {{ include('videos/partials/_video-card.html.twig', {'video': video}) }}
        </div>

        {% if (i % 4) is same as(3) %}
            </div><div class="row">
        {% endif %}

    {% endfor %}
    </div>

{% endblock %}
