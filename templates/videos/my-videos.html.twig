{% extends 'base.html.twig' %}

{% block title %}{{ t('ui.template.videos.my.title')|trans }}{% endblock %}

{% block body %}
    <h2 class="card-box">{{ t('ui.template.videos.my.heading')|trans }}</h2>

    <div class="row">
    {% for i, video in videos %}
        <div class="col-md-3">
            {{ include('videos/partials/_video-card.html.twig', {'video': video}) }}
        </div>

        {% if (i % 4) is same as(3) %}
            </div><div class="row">
        {% endif %}

    {% endfor %}
    </div>

    {% if pagination.pages > 1 %}
        {{ include('partials/_pagination.html.twig', {'pagination': pagination}) }}
    {% endif %}

{% endblock %}
