{% extends 'admin/admin-base-template.html.twig' %}

{% block title %}{{ inflections.plural }}{% endblock %}


{% block body %}

    <div class="row">
        <div class="col-sm-8">
            <div class="bg-picture card-box">
                <div class="profile-info-name">
                    <div class="profile-info-detail">
                        <h3 class="m-t-0 m-b-0">{{ playlist.name }}</h3>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
            <!--/ meta -->


            <div class="card-box">

                <h4 class="header-title m-t-0 m-b-30"><i class="zmdi zmdi-videocam m-r-5"></i> Videos</h4>

                {% if playlist.videos.count > 0 %}

                    <table class="table">
                        <thead>
                        <tr>
                            <th colspan="2">Video</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for video in playlist.videos %}
                            <tr>
                                <td>
                                    <a href="/admin/videos/detail/{{ video.id }}">
                                        <img src="{{ asset(thumbnails_url_segment ~ video.thumbnail) }}" alt="{{ video.title }}" width="40px" height="30px">
                                    </a>
                                </td>
                                <td>
                                    <a href="/admin/videos/detail/{{ video.id }}">{{ video.title }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                {% endif %}

            </div>
        </div>

        <div class="col-sm-4">
            <div class="card-box">

                <h4 class="header-title m-t-0 m-b-30"><i class="zmdi zmdi-info-outline"></i> Info</h4>

                <ul class="list-group m-b-0">
                    <li class="list-group-item">
                        <strong>Owner:</strong> <a href="/admin/users/detail/{{ playlist.user.id }}">{{ playlist.user.fullname }}</a>
                    </li>

                    <li class="list-group-item">
                        <strong>Videos:</strong> {{ playlist.videos.count }}
                    </li>
                    <li class="list-group-item">
                        <strong>Private:</strong> {{ playlist.private ? 'Yes' : 'No' }}
                    </li>

                    <li class="list-group-item">
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
